{
  "name": "barebones-share-buttons",
  "version": "0.7.0",
  "description": "A light weight library to fetch social sharing information from APIs that support JSONP",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir ./dist",
    "lint": "jshint --verbose ./src & jshint --verbose ./test",
    "test": "npm run lint && karma start",
    "build": "npm run clean && browserify ./src/app.js -o ./dist/sharebuttons.js && uglifyjs ./dist/sharebuttons.js -o ./dist/sharebuttons.min.js -m",
    "preversion": "npm test",
    "version": "npm run build && git add -A dist --force",
    "postversion": "git push && git push --tags && rm -rf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/findercomau/share-buttons.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/findercomau/share-buttons/issues"
  },
  "homepage": "https://github.com/findercomau/share-buttons",
  "devDependencies": {
    "browserify": "^9.0.8",
    "jasmine-core": "^2.2.0",
    "jshint": "^2.7.0",
    "karma": "^0.12.31",
    "karma-browserify": "^4.1.2",
    "karma-cli": "0.0.4",
    "karma-jasmine": "^0.3.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "uglify-js": "^2.4.20"
  }
}
